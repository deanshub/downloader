{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["ESNEXT"],
        "types": ["jest"],
        "outDir": "build",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["external-modules.d.ts", "src/**/*", "src/**/*.json", "./scripts/*", "package.json"]
}
