{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["ESNEXT"],
        "types": ["jest"],
        "outDir": "build",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./scripts/*", "package.json"]
}
