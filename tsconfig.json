{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["ESNEXT"],
        "outDir": "build",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "files": [
        "external-modules.d.ts"
    ],
    "include": ["src/**/*", "src/**/*.json", "./scripts/*", "package.json"]
}
